{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/_build/${presetName}"
    },
    {
      "name": "default-x64-linux",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "default-x64-windows",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/x86_64-pc-windows-msvc.cmake"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "description": "Linux debug build using Ninja Generator",
      "inherits": [
        "default-x64-linux"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "description": "Linux release build using Ninja Generator",
      "inherits": [
        "default-x64-linux"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Windows debug build using Ninja Generator",
      "inherits": [
        "default-x64-windows"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "description": "Windows release build using Ninja Generator",
      "inherits": [
        "default-x64-windows"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "configurePreset": "linux-x64-release"
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "configurePreset": "windows-x64-release"
    }
  ]
}
